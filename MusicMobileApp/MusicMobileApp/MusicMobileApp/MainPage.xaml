<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MusicMobileApp"
             x:Class="MusicMobileApp.MainPage">

	<StackLayout>
		<Entry x:Name="name" Text="Track Name" />
		<Entry x:Name="genre" Text="Genre" />
		<Entry x:Name="length" Text="Length" />
		<Entry x:Name="artist" Text="Artist" />
		<Button x:Name="addButton" Text="Add to Database" Clicked="AddToDatabase"/>
	</StackLayout>

</ContentPage>